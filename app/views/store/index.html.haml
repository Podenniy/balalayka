- if @count > 5 
  %strong
    You've viewed this page #{pluralize(@count,"time")}, it is time to buy
%h1 Balalaikin Catalog
-@products.each do |product|
  .hero-unit.span11.product_title.well.entry
    %h3 
      = product.title
    = link_to image_tag(product.image_url),product
    %p.discription
      = sanitize(product.description)
    .price_line
      %span.price
        %strong
          = t("store.price")
          
        %span.waluta
          = number_to_currency(product.price, unit: "UA", format: "%n %u")
      = button_to t("store.add_to_cart"), line_items_path(product_id: product), remote: true ,  :class => "btn btn-primary "    