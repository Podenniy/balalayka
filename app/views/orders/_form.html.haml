= simple_form_for @order, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name,label:'ИМЯ',    :input_html => {:class => 'span9'}
  = f.input :address,label:'Адрес',  :input_html => {:class => 'span9',  cols:40} 
  = f.input :email,   :input_html => {:class => 'span9', }
  = f.input  :pay_type, collection: Order::PAYMENT_TYPES, hint: 'Выбирите метод оплаты',:input_html => {:class => 'span8'}
  .form-actions
    = f.submit 'Оформить заказ', :class => 'btn btn-large btn_cl'
    