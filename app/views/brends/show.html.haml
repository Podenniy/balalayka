.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), brends_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_brend_path(@brend), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), brend_path(@brend), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
