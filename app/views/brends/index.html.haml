- model_class = Brend
.page-header
  %h1=t ('brend.title'), :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:discription)
      %th= model_class.human_attribute_name(:category_id)
      %th= model_class.human_attribute_name(:image_url)
      
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @brends.each do |brend|
      %tr
        %td= link_to brend.id, brend_path(brend)
        %td= brend.title
        %td=truncate(strip_tags(brend.discription),length:80) 
        %td= brend.category_id
        %td
          = image_tag(brend.image_url)
        
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_brend_path(brend), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), brend_path(brend), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_brend_path, :class => 'btn btn-primary'
