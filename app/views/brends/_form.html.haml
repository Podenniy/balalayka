= simple_form_for @brend, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :discription
  = f.association :category
  = f.input :image_url
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), brends_path, :class => 'btn'
