- model_class = Category

%table.table.table-striped
  %thead
    %tr
      %th
      %th
      %th
      %th
      %th
  %tbody
    - @categories.each do |category|
      %tr
        %td= link_to category.id, category_path(category)
        %td= category.name
        %td= category.parent_id
        %td= category.created_at
        %td
          = link_to t('category.edit', :default => t("helpers.links.edit")), edit_category_path(category), :class => 'btn btn-mini'
          = link_to t('category.destroy', :default => t("helpers.links.destroy")), category_path(category), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t("category.new", :default => t("helpers.links.new")), new_category_path, :class => 'btn btn-primary'
